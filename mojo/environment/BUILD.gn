    "async_wait_perftest.cc",
  ]

  deps = [
    ":chromium",
    "//base",
    "//base/test:test_support",
    "//mojo/edk/test:run_all_perftests",
    "//mojo/message_pump",
    "//mojo/public/c/environment/tests:perftest_helpers",
    "//mojo/public/cpp/environment",
    "//testing/gtest",
  ]
}
